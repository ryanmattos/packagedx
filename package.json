{
  "name": "packagedx",
  "displayName": "Package DXription",
  "description": "A ready-to-use extension for showing packages informations",
  "publisher": "ryanfmattos",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Ryan Matos",
    "email": "ryanferreiradematos@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanmattos/packagedx.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "icon": "logo.png",
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [".json"],
        "aliases": ["JSON", "json"],
        "filenames": ["package.json", "package-lock.json"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
